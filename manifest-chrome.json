{
    "manifest_version": 3,
    "name": "timezonify",
    "version": "5.0",
    "description": "Makes all timings local. Select the timing you want to convert into your own timezone, then click on Timezonify. Voila.",
    "icons": {
        "128": "icons/timezonify-logo-128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": ["*://*/*"],
    "background": { 
        "service_worker": "background/background.js",
        "type": "module"
    },
    "action": {
        "default_icon": "icons/timezonify-logo-128.png",
        "default_title": "Timezonify",
        "default_popup": "popup/timezonify-config.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "browser-polyfill.js",
                "content_scripts/timezonify.js"
            ]
        }
    ],
    "web_accessible_resources": [{
        "resources": [
            "utils/utils.js",
            "data/timezones.json"
        ],
        "matches": ["*://*/*"]
    }]
}