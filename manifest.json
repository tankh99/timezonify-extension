{
    "manifest_version": 2,
    "name": "timezonify",
    "version": "3.1",
    "description": "Makes all timings local. Select the timing you want to convert into your own timezone, then click on Timezonify",
    "icons": {
        "128": "icons/timezonify-logo-128.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "background": [
        "browser-polyfill.js"
    ],
    "browser_action": {
        "default_icon": "icons/timezonify-logo-128.png",
        "default_title": "Timezonify",
        "default_popup": "popup/timezonify-config.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "browser-polyfill.js",
                "content_scripts/timezonify.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "data/storage.js",
        "data/timezones.json"
    ]
}