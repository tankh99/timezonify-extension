{
    "manifest_version": 2,
    "name": "timezonify",
    "version": "2.1",
    "description": "Makes all timings local",
    "icons": {
        "64": "icons/clock-64.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "browser_action": {
        "default_icon": "icons/clock-64.png",
        "default_title": "Timezonify",
        "default_popup": "popup/timezonify-config.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_scripts/timezonify.js"]
        }
    ],
    "web_accessible_resources": [
        "data/storage.js"
    ],
    "browser_specific_settings": {
        "gecko":{
            "id": "{a0da06f4-9f95-41f1-9e42-eb189dc8c758}"
        }
    }
}